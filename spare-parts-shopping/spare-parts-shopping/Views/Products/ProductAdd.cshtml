
@{
    ViewBag.Title = "ProductAdd";
}

<div class="login">
    <form action="/products/ProductAddItem" method="post">
        <div class="login__title">
            <span>Ürün Ekle</span>
        </div>
        <div class="login__inputs">
            <input name="name" id="name" type="text" value="" placeholder="Ürün Adı" />
            <input name="price" id="price" type="text" value="" placeholder="Liste Fiyatı" />
            <input name="stock" id="stock" type="text" value="" placeholder="Adet" />
            
        </div>
        <div class="login__buttons">
            <button type="submit">Continue</button>
            @*<a href="#">New User? <b>Register</b></a>*@
        </div>
    </form>

</div>