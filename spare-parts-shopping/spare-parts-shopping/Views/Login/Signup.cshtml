
@{
    ViewBag.Title = "Signup";
    string errorMessage = TempData["ErrorMessage"]?.ToString();
}

<div class="login">
    

    <form method="post" action="/login/useradd">
        <div class="login__title">
            <span>Signup</span>
            <span>to get started</span>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <span style="color:red;">@errorMessage</span>
            }
        </div>
        <div class="login__inputs">
            <input name="name" type="text" value="" placeholder="Name" />
            <input name="username" type="text" value="" placeholder="Username" />
            <input name="mail" type="text" value="" placeholder="Email" />
            <input name="password" type="password" value="" placeholder="password" />
        </div>
        <div class="login__buttons">
            <button type="submit">Continue</button>
            <a href="#">Already registered <b>Login</b></a>
        </div>
    </form>

</div>

