@model spare_parts_shopping.Models.Product
@{
    ViewBag.Title = "ProductDetail";
}

<div class="product__detail">
    <h1 class="detail__title">@Model.Name</h1>
    <div class="detail__image">
        <img src="/images/@Model.Image">
    </div>

    <span class="detail__stock">Stok : @Model.Stock Adet</span>
    <span class="detail__price">Ücret : @Model.Price TL</span>
    <a href="/Products/ProductAddItem?productId=@Model.Id" class="detail__submit">Sepete Ekle</a>
</div>